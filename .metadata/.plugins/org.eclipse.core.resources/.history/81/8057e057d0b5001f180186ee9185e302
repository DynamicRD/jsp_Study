<%@page import="java.io.PrintWriter"%>
<%@page import="java.util.ArrayList"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ page import="co.kh.dev.login.model.LoginDAO"%>
<%@ page import="co.kh.dev.login.model.LoginVO"%>
<%
// 로그인 정보 리스트 가져오기
LoginDAO ldao = new LoginDAO();
ArrayList<LoginVO> list = ldao.listLogin(); // DB에서 사용자 목록 가져오기
%>

<html>
<head>
<title>가입자 리스트</title>
<style>
th, td {
	padding: 10px;
	text-align: center;
	border: 1px solid #ddd;
}
</style>
</head>
<body>
	<%
	response.setContentType("text/html;charset=UTF-8");
	PrintWriter out1 = response.getWriter();
	ldao = new LoginDAO();
	list = ldao.listLogin();
	out1.println("<html>");
	out1.println("<head><title>가입자 리스트</title></head>");
	out1.println("<body>");
	for (int i = 0; i < list.size(); i++) {
		String id = list.get(i).getId();
		String pass = list.get(i).getPass();
		String name = list.get(i).getName();
		out1.println("<table align=center width=500 border=1>");
		out1.println("<tr>");
		out1.println("<th width=100>아이디</th>");
		out1.println("<td width=100 align=center>" + id + "</td>");
		out1.println("<th width=100>비밀번호</th>");
		out1.println("<td width=100 align=center>" + pass + "</td>");
		out1.println("<th width=100>이름</th>");
		out1.println("<td width=100 align=center>" + name + "</td>");
		out1.println("</tr>");
		out1.println("</table>");
		out1.println("<p>");
	}
	out1.println(
			"<p align=center><input type='button' onclick = \"location.href = 'LoginServlet.jsp' \" value='이전화면으로'></p>");
	out1.println("</body>");
	out1.println("</html>");
	%>
</body>
</html>